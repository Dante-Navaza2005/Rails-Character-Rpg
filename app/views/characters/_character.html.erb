<div id="<%= dom_id character %>">
  <p>
    <strong>Name:</strong>
    <%= character.name %>
  </p>

  <p>
    <strong>Strength:</strong>
    <%= character.strength %>
  </p>

  <p>
    <strong>Dexterity:</strong>
    <%= character.dexterity %>
  </p>

  <p>
    <strong>Constitution:</strong>
    <%= character.constitution %>
  </p>

  <p>
    <strong>Intelligence:</strong>
    <%= character.intelligence %>
  </p>

  <p>
    <strong>Wisdom:</strong>
    <%= character.wisdom %>
  </p>

  <p>
    <strong>Charisma:</strong>
    <%= character.charisma %>
  </p>

  <p>
    <strong>Level:</strong>
    <%= character.level %>
  </p>

  <p>
    <strong>Proficiency bonus:</strong>
    <%= character.proficiency_bonus %>
  </p>

  <h2>Skills</h2>
  <% if character.skills.any? %>
    <ul>
      <% character.skills.each do |skill| %>
        <li>
          <strong><%= skill.name %></strong> - 
          Ability: <%= skill.ability.capitalize %> | 
          Score: <%= skill.score %> | 
          Proficient: <%= skill.proficient ? "Yes" : "No" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>This character has no skills yet.</p>
  <% end %>

  <p>
    <strong>Updated at:</strong>
    <%= time_tag character.updated_at, "data_local": "time", "data-format": "%B %e, %Y %l:%M%P"%>
  </p>

</div>
